<UserControl x:Class="WpfApp1.Controls.ItemIdentificationControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfApp1.Controls"
             xmlns:viewModels="clr-namespace:WpfApp1.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             d:DataContext="{d:DesignInstance Type=viewModels:ItemIdentificationViewModel}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Viewbox Grid.Column="0">
            <TextBlock>
                <TextBlock.Text>
                    <MultiBinding StringFormat="Hi {0} {1}">
                        <Binding Path="AppState.SelectedStudent.FirstName" />
                        <Binding Path="AppState.SelectedStudent.LastName" />
                    </MultiBinding>
                </TextBlock.Text>
            </TextBlock>
        </Viewbox>
        <Viewbox Grid.Row="1">            
            <Label>What item do you have?</Label>
        </Viewbox>
    </Grid>
</UserControl>
